<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@drawable/container_candidate_recycler"
    android:layout_marginBottom="15dp"
    android:elevation="5dp"
    android:layout_gravity="center_horizontal"
    android:paddingRight="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/professional_item_img"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/candidate_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/professional_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#373633"
            android:textStyle="bold"
            tools:text="eazeeezaeazeaze" />

        <TextView
            android:id="@+id/professional_item_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#666986"
            tools:text="eaezaeaze" />

        <TextView
            android:id="@+id/professional_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textColor="#b0adaf"
            tools:text="ezaezeaze" />

    </LinearLayout>

    <TextView
        android:id="@+id/professional_item_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/candidate_linear_layout"
        android:background="@drawable/rouded_corner"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:textColor="#666986"
        android:textSize="12sp"
        tools:text="eaeze" />

</RelativeLayout>